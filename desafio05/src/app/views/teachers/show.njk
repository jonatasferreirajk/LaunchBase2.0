{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background:
        url({{ teacher.avatar_url }})
        no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Nome Completo</div>
                <div>{{teacher.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>
            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{teacher.education_level}}</div>
            </div>
            <div class="item">
                <div>Modalidade de Aula</div>
                <div>{{ "Presencial" if teacher.modalidade == "Presencial" else "EAD"}}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                {% for subjectstaught in teacher.subjectstaught %}
                    <span>{{subjectstaught}}</span>
                {% endfor %}
            </div>
             <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>
            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
        </section>
    </div>
{% endblock content %}