{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="avatar" style="background:
        url(https://source.unsplash.com/collection/8874679/500x500)
        no-repeat center center / cover"></section>
        <section class="details">
            <h3>Novo Professor</h3>
            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" id="" placeholder="http://">
                </div>
            </div>
            <div class="item">
                <div>Nome Completo</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do Professor">
                </div>
            </div>
            <div class="item">
                <div>Data de Nascimento </div>
                <input type="date" name="birth">
            </div>
            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                   <select name="escolaridade">
                        <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                        <option value="Ensino Superior Completo" selected>Ensino Superior Completo</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                   </select>
                </div>
            </div>
            <div class="item">
                <div>Modalidade de Aula</div>
                <div>
                    <span><input type="radio" name="modalidade" value="Presencial" checked>Presencial</span>
                    <span><input type="radio" name="modalidade" value="EAD">EAD</span>
                </div>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <input type="text" name="áreadeatuação" placeholder="Disciplinas que podem ser lecionadas">
            </div>
             <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}