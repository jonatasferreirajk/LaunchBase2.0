{% extends "layout.njk" %}
<html lang="pt-br">    

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conteúdos - Desafio / Módulo 2</title>
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
{% block content %}
<body>
    <header>
        <div class="links">
            <a href="/">Ínicio</a>
            <a href="/conteudos">Conteúdos</a>
            <a href="https://discordapp.com/invite/gCRAFhc">Comunidade</a>
            <a href="mailto:oi@rocketseat.com.br">Email</a>
            <a href="tel:+5547992078767">Telefone</a>
            <a href="/sobre">Sobre</a>
        </div>
    </header>

    <section class="cards">
        {% for conteudo in conteudos %}
            <div class="card" id="{{conteudo.id}}">
                <div class="card__image-container">
                    <img src="https://skylab.rocketseat.com.br/static/{{conteudo.id}}.svg" alt="Imagem de {{conteudo.title}}">
                </div>
                <div class="card__content">
                    <p>{{conteudo.title}}</p>
                </div>
                <div class="card__info">
                    <p>{{conteudo.duration}}</p>
                    <div class="card__price">{{conteudo.price}}</div>
                </div>
            </div>
        {% endfor %}
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close">
                <i class="material-icons">close</i>
            </a>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>


    <script src="/2 - Módulo02/Desafio/scriptdesafio.js"></script>
</body>
{% endblock %}
</html>